= form_for @language do |f|
  - if @language.errors.any?
    #error_explanation
      %h2= "#{pluralize(@language.errors.count, "error")} prohibited this language from being saved:"
      %ul
        - @language.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :lookback
    = f.number_field :lookback
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
