= form_for @settlement do |f|
  - if @settlement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@settlement.errors.count, "error")} prohibited this settlement from being saved:"
      %ul
        - @settlement.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :icon
    = f.text_field :icon
  .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :language_id
    = f.number_field :language_id
  .field
    = f.label :ancestry
    = f.text_field :ancestry
  .actions
    = f.submit 'Save'
