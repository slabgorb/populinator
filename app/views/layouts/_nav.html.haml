.navbar.navbar-fixed-top
  .navbar-inner
    %a.brand{href: root_path}
      Populinator
    %ul.nav
      %li
        = link_to 'Settlements', settlements_path
      %li
        = link_to 'Languages', languages_path
      %li.dropdown
        %a.dropdown-toggle{'data-toggle' => 'dropdown', href: '#'}
          Account
          %i.icon-caret-down
        %ul.dropdown-menu{role: 'menu'}
          - if user_signed_in?
            %li= link_to_unless_current('Logout', destroy_user_session_path, :method=>'delete')
          - else
            %li= link_to_unless_current('Login', new_user_session_path)
          - if user_signed_in?
            %li= link_to_unless_current('Edit account', edit_user_registration_path)
          - else
            %li= link_to_unless_current('Sign up', new_user_registration_path)
