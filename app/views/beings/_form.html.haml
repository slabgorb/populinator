= form_for @being do |f|
  - if @being.errors.any?
    #error_explanation
      %h2= "#{pluralize(@being.errors.count, "error")} prohibited this being from being saved:"
      %ul
        - @being.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :surname
    = f.text_field :surname
  .field
    = f.label :given_name
    = f.text_field :given_name
  .field
    = f.label :age
    = f.number_field :age
  .field
    = f.label :alive
    = f.check_box :alive
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :ancestry
    = f.text_field :ancestry
  .actions
    = f.submit 'Save'
